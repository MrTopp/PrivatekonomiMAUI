<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Privatekonomi.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Privatekonomi.Maui"
    xmlns:pages="clr-namespace:Privatekonomi.Maui.Pages"
    Title="Privatekonomi">

    <TabBar>
        <ShellContent Title="Översikt" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        <ShellContent Title="Transaktioner" ContentTemplate="{DataTemplate pages:TransactionsPage}" Route="Transactions" />
        <ShellContent Title="Budget" ContentTemplate="{DataTemplate pages:BudgetPage}" Route="Budget" />
        <ShellContent Title="Mål" ContentTemplate="{DataTemplate pages:GoalsPage}" Route="Goals" />
    </TabBar>
</Shell>
