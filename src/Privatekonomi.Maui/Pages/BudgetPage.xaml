<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Privatekonomi.Maui.Pages.BudgetPage"
             Title="Budget">
    <VerticalStackLayout Padding="12" Spacing="8">
        <Label Text="Aktuell månadsbudget" FontAttributes="Bold" />
        <CollectionView x:Name="BudgetCategories">
            <CollectionView.Header>
                <Grid ColumnDefinitions="*,Auto,Auto" Padding="4">
                    <Label Text="Kategori" FontAttributes="Bold" />
                    <Label Grid.Column="1" Text="Planerat" FontAttributes="Bold" />
                    <Label Grid.Column="2" Text="Använt" FontAttributes="Bold" />
                </Grid>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,Auto,Auto" Padding="4">
                        <Label Text="{Binding Name}" />
                        <Label Grid.Column="1" Text="{Binding PlannedAmount}" />
                        <Label Grid.Column="2" Text="{Binding Spent}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>