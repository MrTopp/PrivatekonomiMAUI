<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Privatekonomi.Maui.Pages.GoalsPage"
             Title="Mål">
    <VerticalStackLayout Padding="12" Spacing="8">
        <Label Text="Sparmål" FontAttributes="Bold" />
        <CollectionView x:Name="Goals">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="8" Margin="0,4" BorderColor="#ccc" CornerRadius="8">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <ProgressBar Progress="{Binding Progress}" />
                            <Label Text="{Binding CurrentAmountFormatted}" FontSize="12" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>