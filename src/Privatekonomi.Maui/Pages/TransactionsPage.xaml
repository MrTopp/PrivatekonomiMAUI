<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Privatekonomi.Maui.Pages.TransactionsPage"
             Title="Transaktioner">
    <VerticalStackLayout Padding="12" Spacing="8">
        <SearchBar x:Name="Search" Placeholder="SÃ¶k beskrivning" TextChanged="OnSearch" />
        <CollectionView x:Name="Transactions">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="Auto,*,Auto" Padding="4">
                        <Label Text="{Binding Date, StringFormat='{}{0:MM-dd}'}" />
                        <Label Grid.Column="1" Text="{Binding Description}" LineBreakMode="TailTruncation" />
                        <Label Grid.Column="2" Text="{Binding Amount}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>